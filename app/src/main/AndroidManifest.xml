        <activity
            android:name=".SettngActvity"
            android:screenOrientation="portrait"></activity>

        <!--<activity
            android:name=".SupportActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>-->
        <activity
            android:name=".InvoiceBillActivity"
